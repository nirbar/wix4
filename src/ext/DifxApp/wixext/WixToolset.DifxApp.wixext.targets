<Project>
  <ItemGroup>
    <WixExtension Include="$(MSBuildThisFileDirectory)..\$(WixToolsetExtensionPackageFolder)\WixToolset.DifxApp.wixext.dll"
       Condition=" Exists('$(MSBuildThisFileDirectory)..\$(WixToolsetExtensionPackageFolder)\WixToolset.DifxApp.wixext.dll') " />
    <UnsupportedWixExtension Include="WixToolset.DifxApp.wixext"
      Condition=" !Exists('$(MSBuildThisFileDirectory)..\$(WixToolsetExtensionPackageFolder)\WixToolset.DifxApp.wixext.dll') " />
    <WixLibrary Include="$(MSBuildThisFileDirectory)..\$(WixToolsetExtensionPackageFolder)\difxapp_$(InstallerPlatform).wixlib" />
  </ItemGroup>
</Project>
